<%- include('partials/header') %>
<div class="table-wrapper">
    <a href="/add/categories" class=" float-right" title="Add a new category" target="_blank">Add new category</a>

    <% if(categories && categories.length > 0) { %>

        <table class="table table-hover">
            <thead class="thead-dark"> <!-- แก้จาก thread เป็น thead -->
                <tr>
                    <th scope="col">Category_ID</th>
                 <th scope="col">Category_Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach((category, index) => { %>
                    <tr>
                       <th scope="row"><%= category.category_id %></th>
                           <td><%= category.category_name %></td>
                       <td>
                        <a href="/edit/categories/<%= category.category_id %>"  class="btn-sm btn-success">Edit</a>
                        <a href="/delete/categories/<%= category.category_id%>"  class="btn-sm btn-delete">Delete</a>
                       </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %> 
        <p class="text-center">No category found.</p>
    <% } %>
</div>
</body>
</html>
